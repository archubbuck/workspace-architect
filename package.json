{
  "name": "workspace-architect",
  "version": "1.7.0",
  "description": "Curated library of 400+ specialized AI agents, prompts, and skills for GitHub Copilot. Zero-friction CLI tool (npx workspace-architect) for downloading expert personas, instructions, and collections for web development, DevOps, AI engineering, and more.",
  "bin": {
    "workspace-architect": "./bin/cli.js",
    "wsa": "./bin/cli.js"
  },
  "scripts": {
    "start:registry": "verdaccio --config verdaccio/config.yaml",
    "test:local": "node bin/cli.js list && node bin/cli.js download instructions:basic-setup --dry-run",
    "analyze": "node scripts/analyze-collections.js",
    "generate-manifest": "node scripts/generate-manifest.js",
    "prepublishOnly": "npm run generate-manifest",
    "fetch-upstream": "node scripts/fetch-upstream-assets.js",
    "sync-skills": "node scripts/sync-anthropic-skills.js",
    "validate-skills": "node scripts/validate-skills.js",
    "release": "release-it",
    "publish:local": "npm run release && npm publish --registry http://localhost:4873"
  },
  "files": [
    "bin",
    "assets-manifest.json",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "github-copilot",
    "copilot-agents",
    "ai-agents",
    "copilot-instructions",
    "copilot-chat",
    "chatmodes",
    "ai-personas",
    "prompts",
    "prompt-engineering",
    "developer-tools",
    "cli-tool",
    "npx",
    "code-assistant",
    "ai-assistant",
    "agentic-workflow",
    "llm",
    "claude-skills",
    "vscode",
    "architecture",
    "devops",
    "react",
    "azure",
    "typescript",
    "code-generation",
    "productivity"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/archubbuck/workspace-architect.git"
  },
  "bugs": {
    "url": "https://github.com/archubbuck/workspace-architect/issues"
  },
  "homepage": "https://github.com/archubbuck/workspace-architect#readme",
  "author": "Adam Chubbuck <adam.chubbuck@gmail.com> (https://github.com/archubbuck)",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "gray-matter": "^4.0.3",
    "inquirer": "^9.2.15"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.2",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "release-it": "^17.11.0",
    "verdaccio": "^5.29.0"
  },
  "type": "module"
}
